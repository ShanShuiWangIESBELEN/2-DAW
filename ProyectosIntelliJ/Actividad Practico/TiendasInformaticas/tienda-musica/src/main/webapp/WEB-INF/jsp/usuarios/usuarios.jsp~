<div id="contenedora">
    <div class="clearfix">
        <h1 style="float: left;">Usuarios</h1>
        <div class="header-buttons" style="float: right;">
            <form action="${pageContext.request.contextPath}/usuarios/crear">
                <input type="submit" value="Crear Usuario">
            </form>
        </div>
    </div>
    <hr>
    <div class="user-list header">
        <div>ID</div>
        <div>Usuario</div>
        <div>Password</div>
        <div>Rol</div>
        <div class="actions">Acción</div>
    </div>
    <hr>
    <%
        List<Usuario> listaUsuarios = (List<Usuario>) request.getAttribute("listaUsuarios");
        if (listaUsuarios != null && !listaUsuarios.isEmpty()) {
            for (Usuario user : listaUsuarios) {
    %>
    <div class="user-list">
        <div><%= user.getIdUsuario() %></div>
        <div><%= user.getUsuario() %></div>
        <div><%= user.getPassword().substring(2, 5) %></div>
        <div><%= user.getRol() %></div>
        <div class="actions">
            <form action="${pageContext.request.contextPath}/usuarios/<%= user.getIdUsuario() %>" method="get">
                <input type="submit" value="Ver Detalle">
            </form>
            <form action="${pageContext.request.contextPath}/usuarios/editar/<%= user.getIdUsuario() %>" method="get">
                <input type="submit" value="Editar">
            </form>
            <form action="${pageContext.request.contextPath}/usuarios/borrar/" method="post">
                <input type="hidden" name="__method__" value="delete">
                <input type="hidden" name="codigo" value="<%= user.getIdUsuario() %>">
                <input type="submit" value="Eliminar" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">
            </form>
        </div>
    </div>
    <%
        }
    } else {
    %>
    <div class="no-users">No hay registros de usuarios</div>
    <% } %>
