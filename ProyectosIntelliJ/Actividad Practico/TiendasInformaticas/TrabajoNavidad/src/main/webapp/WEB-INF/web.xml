<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID"
         version="4.0">

  <display-name>tienda_informatica</display-name>

  <!--He tenido que buscar la solución en internet porque no he podido resolver del enlace, ya que acceder directamente a los archivos de WEB-INF
  no esta permitido para java y con el mapeo de servlets si esta permitidos-->

  <!-- Página de inicio -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Mapeo de CarritoServlet -->
  <servlet>
    <servlet-name>CarritoServlet</servlet-name>
    <servlet-class>org.iesbelen.servlet.CarritoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarritoServlet</servlet-name>
    <url-pattern>/carrito</url-pattern>
  </servlet-mapping>

  <!-- Mapeo de CategoriasServlet -->
  <servlet>
    <servlet-name>CategoriasServlet</servlet-name>
    <servlet-class>org.iesbelen.servlet.CategoriasServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CategoriasServlet</servlet-name>
    <url-pattern>/categorias</url-pattern>
  </servlet-mapping>

  <!-- Mapeo de LoginServlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.iesbelen.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

</web-app>
